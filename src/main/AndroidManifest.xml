<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.igorski.kosm">

    <!-- support all but the smallest of screens -->
    <supports-screens
            android:xlargeScreens="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:smallScreens="true"
            android:anyDensity="true" />

    <!-- minimum version is API 10 ( 2.3.3 Gingerbread ) but we target API 11 ( 3.0.x Honeycomb )
         for GPU hardware acceleration and target 17 ( 4.2 Jellybean ) for low latency audio -->
    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="17" />

    <!-- required permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- required features -->
    <uses-feature android:name="android.hardware.sensor.accelerometer" />
    <uses-feature android:name="android.hardware.sensor.compass" />

    <application android:label="@string/app_name"
                 android:icon="@drawable/icon">

        <activity android:name=".Bootstrap"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Kosm"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"
                  android:hardwareAccelerated="true">
        </activity>
    </application>

</manifest>
